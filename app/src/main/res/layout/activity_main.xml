<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.helenchan.binary.MainActivity">

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"/>

    <Button
        android:id="@+id/higher_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="HIGHER"
        android:layout_below="@id/numberTextView"/>

    <Button
        android:id="@+id/lower_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="LOWER"
        android:layout_below="@+id/numberTextView"
        android:layout_toRightOf="@+id/numberTextView"
        android:layout_toEndOf="@+id/numberTextView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />
</RelativeLayout>
